syntax on
set autoindent

" enable mouse
" yes, mouse in vim lmao
set mouse=a

" show linenumbers
" the current line will be the actual line number
" all other lines will be the offset from the current line
set number relativenumber

" highlight all search results instead of only the current match
set hlsearch

" show current column
set ruler

" Disable annoying bells
set noerrorbells

highlight Comment ctermfg=green
set backspace=indent,eol,start
